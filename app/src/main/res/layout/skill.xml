<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/skill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Skill"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/player_text_size"
        android:textColor="#ff000000" />

    <FrameLayout
        android:id="@+id/skill_clickarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/skill_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/blueyellowchip"/>

        <ImageView
            android:id="@+id/skill_value"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/five"/>

    </FrameLayout>

    <TextView
        android:id="@+id/skill_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="0/6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/player_text_size"
        android:textColor="#ff000000" />
</LinearLayout>